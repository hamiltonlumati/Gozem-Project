<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <title>Gozem - Web-Driver</title>
</head>

<body>
    <div class="container p-3">
        <form class="row" method="GET" action="">
            <div class="col-12">
                <label for="inputEmail4" class="form-label"></label>
                <input type="text" name="packageID" placeholder="Enter Delivery ID">
            </div>
            <div class="col-12">
                <button type="input" name="searchPackage">Track</button>
            </div>
        </form>
        <div class="row">
            <div class="col">
                <% if(packageResult!==0){ %>
                    <div class="row">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">Package Details</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Description:</h6>
                                <p class="card-text">
                                    <%= packageResult.description %>
                                </p>
                                <p>
                                    <nav>Weight:</nav>
                                    <%= packageResult.weight%>
                                </p>
                                <p>
                                    <nav>Width:</nav>
                                    <%= packageResult.width%>
                                </p>
                                <p>
                                    <nav>Heigth:</nav>
                                    <%= packageResult.height%>
                                </p>
                                <p>
                                    :/</nav>
                                    <%= packageResult.depth%>
                                </p>
                                <p>
                                    <nav>From name:</nav>
                                    <%= packageResult.from_name%>
                                </p>
                                <p>
                                    <nav>From Address:</nav>
                                    <%= packageResult.from_address%>
                                </p>
                                <p>
                                    <nav>From Location:</nav>
                                    <%= packageResult.from_location%>
                                </p>
                                <p>
                                    <nav>To Name:</nav>
                                    <%= packageResult.to_name%>
                                </p>
                                <p>
                                    <nav>To Address:</nav>
                                    <%= packageResult.to_address%>
                                </p>
                                <p>
                                    <p>To Location:</p>nav>
                                    <%= packageResult.to_location%>
                                </p>
                            </div>
                        </div>
                    </div>

                    <% } %>
                        <% if(deliveryResult!==0){ %>
                            <div class="row">
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">Delivery Details</h5>
                                        <p>
                                            <nav>Package ID:</nav>
                                            <%= deliveryResult.package%>
                                        </p>
                                        <p>
                                            <nav>Pick Up:</nav>
                                            <%= deliveryResult.pick_up%>
                                        </p>
                                        <p>
                                            <nav>Start Time:</nav>
                                            <%= deliveryResult.start_time%>
                                        </p>
                                        <p>
                                            <nav>End Time</nav>
                                            <%= deliveryResult.end_time%>
                                        </p>
                                        <p>
                                            <nav>Location</nav>
                                            <%= deliveryResult.location%>
                                        </p>
                                        <p>
                                            <nav>Status:</nav>
                                            <%= deliveryResult.status%>
                                        </p>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <div class="col">
                                <div class="ratio ratio-16x9">
                                    <div class="mapouter">
                                        <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                                allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>

            </div>
        </div>
        <form class="row">
            <div class="col-md-6">
                <label for="inputState" class="form-label">Status</label>
                <select name="status" id="inputState" class="form-select">
            <option selected>Open</option>
            <option>Picked-up</option>
            <option>in-transit</option>
            <option>Delivered</option>
            <option>Failed</option>
            </select>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <script>
            const socket = new WebSocket("ws://localhost:3000");

            socket.addEventListener("open", () => {
                // send a message to the server
                socket.send(JSON.stringify({
                    type: "hello from client",
                    content: [3, "4"]
                }));
            });

            // receive a message from the server
            socket.addEventListener("message", ({
                data
            }) => {
                const packet = JSON.parse(data);

                switch (packet.type) {
                    case "hello from server":
                        // ...
                        break;
                }
            });
        </script>
</body>

</html>