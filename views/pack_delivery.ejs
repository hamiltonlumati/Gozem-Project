    <div class="">
        <% if(pack){ %>
            <form class="" method="POST" action="/api/package/">
                <div class="">
                    <label>Description</label>
                    <input type="text" name="description" required>
                </div>
                <div class="col-md-6">
                    <label>Sender Name</label>
                    <input type="text" name="from_name" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Sender Address</label>
                    <input type="text" name="from_address" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class="col-md-6">
                    <label>Sender location</label>
                    <input type="text" name="from_location" placeholder="1234 Main St" required>
                </div>
                <div class="">
                    <label>Addressee Name</label>
                    <input type="text" name="to_name" id="inputPassword4" required>
                </div>
                <div class=>
                    <label>Addressee Address</label>
                    <input type="text" name="to_address" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class=>
                    <label>Addressee location</label>
                    <input type="text" name="to_location" placeholder="1234 Main St" required>
                </div>
                <div class="">
                    <label class="form-label">depth</label>
                    <input name="depth" required>
                </div>
                <div class="">
                    <label>Weight</label>
                    <input type="number" name="weight" placeholder="10" required>
                </div>
                <div>
                    <label>Width</label>
                    <input type="number" name="width" class="form-control" required>
                </div>
                <div> required
                    <label>Height</label>
                    <input type="number" name="height" required>
                </div>
                <div>
                    <button type="submit" name="savePack" value="1">Save Package</button>
                </div>
            </form>
            <% } %>
                <% if(delivery){ %>
                    <form method="POST" action="/api/delivery/:id" required>
                        <div class=>
                            <label>Package ID</label>
                            <input type="text" name="package_id" placeholder="Package ID" required>
                        </div>
                        <div class=>
                            <label>Pick up date</label>
                            <input type="date" name="pick_up" required>
                        </div>
                        <div>
                            <label>Start Time</label>
                            <input type="date" name="start_time" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputAddress" class="form-label">End Time</label>
                            <input type="date" name="end_time" class="form-control" id="inputAddress" required>
                        </div>
                        <div>
                            <label>Location</label>
                            <input type="text" name="location" required>
                        </div>
                        <div class=>
                            <label>Status</label>
                            <select name="status" required>
                            <option selected>Open</option>
                            <option>Picked-up</option>
                            <option>in-transit</option>
                            <option>Delivered</option>
                            <option>Failed</option>
                            </select>
                        </div>
                        <button type="submit" name="saveDelivery" class=" value=" 1 ">Save Delivery</button>
                    </form>
                    <% } %>
    </div>
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
