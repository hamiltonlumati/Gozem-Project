    <div class="container p-3">
        <% if(pack){ %>
            <form class="row g-3" method="POST" action="/api/package/">
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label">Description</label>
                    <input type="text" name="description" class="form-control" id="inputEmail4" required>
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Sender Name</label>
                    <input type="text" name="from_name" class="form-control" id="inputPassword4" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Sender Address</label>
                    <input type="text" name="from_address" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Sender location</label>
                    <input type="text" name="from_location" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Addressee Name</label>
                    <input type="text" name="to_name" class="form-control" id="inputPassword4" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Addressee Address</label>
                    <input type="text" name="to_address" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Addressee location</label>
                    <input type="text" name="to_location" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">depth</label>
                    <input type="number" name="depth" class="form-control" id="inputPassword4" required>
                </div>
                <div class="col-md-6">
                    <label for="inputAddress" class="form-label">Weight</label>
                    <input type="number" name="weight" class="form-control" id="inputAddress" placeholder="10" required>
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Width</label>
                    <input type="number" name="width" class="form-control" id="inputPassword4" required>
                </div>
                <div class="col-md-6"> required
                    <label for="inputAddress" class="form-label">Height</label>
                    <input type="number" name="height" class="form-control" id="inputAddress" placeholder="10" required>
                </div>
                <div class="col-12">
                    <button type="submit" name="savePack" class="btn btn-primary" value="1">Save Package</button>
                </div>
            </form>
            <% } %>
                <% if(delivery){ %>
                    <form class="row g-3" method="POST" action="/api/delivery/:id" required>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Package ID</label>
                            <input type="text" name="package_id" class="form-control" id="inputAddress" placeholder="Package ID" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">Pick up date</label>
                            <input type="date" name="pick_up" class="form-control" id="inputEmail4" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword4" class="form-label">Start Time</label>
                            <input type="date" name="start_time" class="form-control" id="inputPassword4" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputAddress" class="form-label">End Time</label>
                            <input type="date" name="end_time" class="form-control" id="inputAddress" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputAddress2" class="form-label">Location</label>
                            <input type="text" name="location" class="form-control" id="inputAddress2" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputState" class="form-label">Status</label>
                            <select name="status" id="inputState" class="form-select" required>
                            <option selected>Open</option>
                            <option>Picked-up</option>
                            <option>in-transit</option>
                            <option>Delivered</option>
                            <option>Failed</option>
                            </select>
                        </div>
                        <button type="submit" name="saveDelivery" class="btn btn-primary" value="1">Save Delivery</button>
                    </form>
                    <% } %>
    </div>
    <script>
        function onSignIn(googleUser) {
            var id_token = googleUser.getAuthResponse().id_token;
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/login');
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onload = function() {
                console.log('Signed in as: ' + xhr.responseText);
                if (xhr.responseText == 'success') {
                    signOut();
                    location.assign('/');
                }
            };
            xhr.send(JSON.stringify({
                token: id_token
            }));
        }

        function signOut() {
            var auth2 = gapi.auth2.getAuthInstance();
            auth2.signOut().then(function() {
                console.log('User signed out.');
            });
        }
    </script>
</body>

</html>