<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Package Update</title>
</head>

<body>
    <nav class="header">
        <a href="/dashboard" class="gozem">Gozem</a>
        <form class="lateral" action="/" method="GET">
            <input class="lat" type="text" name="itemname" placeholder="Introduce items name">
            <select class="lat" name="item">
                <option value="1" selected>Packages</option>
                <option value="2">Deliveries</option>
                <option value="3">Drivers</option>
                <option value="4">Clients</option>
            </select>
            <button class="lat" type="submit" name="submit">Search</button>
            <span><a href="/logout">Log Out</a></span>
        </form>
    </nav>
    <% if(result){ %>
        <% for (const [key, result1] of Object.entries(result)){ %>
            <% if(result1.description){ %> 
            <div class="packages-block">
                <h3>Package Update</h3>
                <form class="row g-3" method="GET" action="/api/put">
                    <input type="hidden" name="id" value="<%= result1._id %> ">
                    <div>
                        <label for="inputEmail4" class="">Description</label>
                        <input type="text" name="description" class="" id="inputEmail4" placeholder="<%= result1.description %>">
                    </div>
                    <div>
                        <label for="inputPassword4" class="">Sender</label>
                        <input type="text" name="from_name" class="" id="inputPassword4" placeholder="<%= result1.from_name %>">
                    </div>
                    <div>
                        <label for="inputPassword4" class="">Receiver</label>
                        <input type="text" name="to_name" class="" id="inputPassword4" placeholder="<%= result1.to_name %>">
                    </div>
                    <div>
                        <h3>Package Characteristics</h3>
                        <div>
                            <label for="inputPassword4" class="">Depth</label>
                            <input type="number" name="depth" class="" id="inputPassword4" placeholder="<%= result1.depth %>">
                        </div>
                        <div>
                            <label for="inputAddress" class="">Weight</label>
                            <input type="number" name="weight" class="" id="inputAddress"  placeholder="<%= result1.weight %>">
                        </div>
                        <div>
                            <label for="inputPassword4" class="">Width</label>
                            <input type="number" name="width" class="" id="inputPassword4" placeholder="<%= result1.width %>">
                        </div>
                        <div>
                            <label for="inputAddress" class="">Height</label>
                            <input type="number" name="height" class="" id="inputAddress"  placeholder="<%= result1.height %>">
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" name="savePack" class="">Update Package</button>
                    </div>
                </form>
            </div>
            <% } %> 
        <% } %>
    <% } %> 

</body>

</html>