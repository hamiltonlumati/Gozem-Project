<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <title>Gozem - Web Tracker</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Gozem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/web_tracker">Web Tracker</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/web_driver">Web Driver</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <button class="btn btn-outline-success" type="submit">Log in</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container p-3">
        <div class="row mb-4">
            <form action="/api/package/:id" method="GET" class="input-group">
                <input type="email" class="form-control" name="packageID" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter package ID" name="id">
                <button class="btn btn-primary mt-3 mt-0" type="submit" name="searchPackage">Track</button>
            </form>
        </div>

        <div class="row">
            <div class="col">
                <% if(packageResult!==0){ %>
                    <div class="row">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">Package Details</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Description:</h6>
                                <p class="card-text">
                                    <%= packageResult.description %>
                                </p>
                                <p>
                                    <nav>Weight:</nav>
                                    <%= packageResult.weight%>
                                </p>
                                <p>
                                    <nav>Width:</nav>
                                    <%= packageResult.width%>
                                </p>
                                <p>
                                    <nav>Heigth:</nav>
                                    <%= packageResult.height%>
                                </p>
                                <p>
                                    <nav>Depth:</nav>
                                    <%= packageResult.depth%>
                                </p>
                                <p>
                                    <nav>From name:</nav>
                                    <%= packageResult.from_name%>
                                </p>
                                <p>
                                    <nav>From Address:</nav>
                                    <%= packageResult.from_address%>
                                </p>
                                <p>
                                    <nav>From Location:</nav>
                                    <%= packageResult.from_location%>
                                </p>
                                <p>
                                    <nav>To Name:</nav>
                                    <%= packageResult.to_name%>
                                </p>
                                <p>
                                    <nav>To Address:</nav>
                                    <%= packageResult.to_address%>
                                </p>
                                <p>
                                    <nav>To Location:</nav>
                                    <%= packageResult.to_location%>
                                </p>
                            </div>
                        </div>
                    </div>

                    <% } %>
                        <% if(deliveryResult!==0){ %>
                            <div class="row">

                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                        <h5 class="card-title">Delivery Details</h5>
                                        <p>
                                            <nav>Package ID:</nav>
                                            <%= deliveryResult.package%>
                                        </p>
                                        <p>
                                            <nav>Pick Up:</nav>
                                            <%= deliveryResult.pick_up%>
                                        </p>
                                        <p>
                                            <nav>Start Time:</nav>
                                            <%= deliveryResult.start_time%>
                                        </p>
                                        <p>
                                            <nav>End Time</nav>
                                            <%= deliveryResult.end_time%>
                                        </p>
                                        <p>
                                            <nav>Location</nav>
                                            <%= deliveryResult.location%>
                                        </p>
                                        <p>
                                            <nav>Status:</nav>
                                            <%= deliveryResult.status%>
                                        </p>
                                    </div>
                                </div>/p>
                                <% } %>
                            </div>
                            <div class="col">
                                <div class="ratio ratio-16x9">
                                    <div class="mapouter">
                                        <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                                allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>

            </div>
        </div>
        <script>
            const socket = new WebSocket("ws://localhost:3000");

            socket.addEventListener("open", () => {
                // send a message to the server
                socket.send(JSON.stringify({
                    type: "hello from client",
                    content: [3, "4"]
                }));
            });

            // receive a message from the server
            socket.addEventListener("message", ({
                data
            }) => {
                const packet = JSON.parse(data);

                switch (packet.type) {
                    case "hello from server":
                        // ...
                        break;
                }
            });
        </script>
</body>

</html>